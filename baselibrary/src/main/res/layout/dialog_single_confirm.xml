<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_confirm_bg"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingTop="@dimen/dialog_confirm_padding">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_left_right"
        android:text="确定要操作吗"
        android:layout_gravity="center_horizontal"
        android:textColor="#333333"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_confirm_padding"
        android:layout_marginRight="@dimen/dialog_confirm_padding"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:text="确定要进行此操作吗？"
        android:textColor="#333333"
        android:textSize="@dimen/title_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="@dimen/dialog_confirm_padding"
        android:background="@color/default_bg_color" />

    <TextView
        android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_linear_selector"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/big_text_size" />

</LinearLayout>