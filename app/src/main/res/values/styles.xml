<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--按钮样式-->
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="Button.Default">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>

    <style name="data_posture_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/item_divider_height</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:padding">@dimen/margin_left_right</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
