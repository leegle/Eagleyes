<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/small_margin"
            android:background="@color/divider_color"
            android:gravity="center"
            android:padding="@dimen/small_margin"
            android:text="第1条"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/small_text_size" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/carImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/car_image_height"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_divider_height"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/main_bg_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/plate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginTop="@dimen/margin_top_bottom"
                        android:background="@drawable/plate_bule"
                        android:paddingLeft="@dimen/normal_margin"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingRight="@dimen/normal_margin"
                        android:paddingBottom="@dimen/small_margin"
                        android:text="无车牌"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:id="@+id/brandYearName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_right"
                        android:layout_marginTop="@dimen/margin_top_bottom"
                        android:layout_marginRight="@dimen/margin_left_right"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/color_light_gray"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:layout_marginTop="@dimen/margin_top_bottom"
                    android:text="时间："
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:layout_marginTop="@dimen/margin_top_bottom"
                    android:layout_marginBottom="@dimen/margin_top_bottom"
                    android:text="卡口："
                    android:textColor="@color/color_light_gray"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/handleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_left_right"
                    android:layout_marginBottom="@dimen/margin_left_right"
                    android:background="@drawable/btn_red_selector"
                    android:paddingLeft="@dimen/margin_left_right"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingRight="@dimen/margin_left_right"
                    android:paddingBottom="@dimen/small_margin"
                    android:text="置为已处理"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_text_size" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>