<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/letter"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_left_right"
        android:text="A"
        android:textColor="@color/blue_text"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/itemLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_left_right">

            <ImageView
                android:id="@+id/checkBox"
                android:layout_width="@dimen/icon_search_size"
                android:layout_height="@dimen/icon_search_size"
                android:src="@mipmap/checkbox_default" />

            <TextView
                android:id="@+id/tollgateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/big_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_divider_height"
            android:background="@color/main_bg_color" />
    </LinearLayout>

</LinearLayout>