<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_left_right"
        android:gravity="center_vertical"
        android:text="@string/start_time"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/big_text_size" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/margin_left_right"
        android:text="2018-11-13 12:32"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/big_text_size" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/icon_arrow_width"
        android:layout_height="@dimen/icon_arrow_height"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_left_right"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_right_arrow" />
</LinearLayout>